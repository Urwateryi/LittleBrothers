<!--pages/posts/post-detail/post-detail.wxml-->
<view class='container'>

  <view class='head-image'>
    <image class='head-image' src='{{postData.headImgsSrc}}' mode='aspectFill' />
     <image class='audio' src='../../../resources/imgs/ic_play.png'/> 
  </view>
  <view class='sub-container'>

    <view class='author-date'>
      <image class='avatar' src='{{postData.avatar}}' mode='aspectFill' />
      <text class='author'>{{postData.author}}</text>
      <text class='const-text'>发表于</text>
      <text class='date'>{{postData.dateTime}}</text>
    </view>

    <text class='title'>{{postData.title}}</text>

    <view class='tool'>
      <view class='circle-img'>
        <image src='../../../resources/imgs/ic_detail_collect.png' />
        <image class='share-img' src='../../../resources/imgs/ic_detail_share.png' />
      </view>
      <view class='horizon' />
    </view>

    <text class='detail'>{{postData.detail}}</text>
  </view>
</view>